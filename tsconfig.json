{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",

    "jsx": "react",
    "declaration": true,

    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [ "**/*.ts", "**/*.tsx" ],
  "exclude": [ "dist", "test/dist", "node_modules" ]
}
